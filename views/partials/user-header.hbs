<header class="site-navbar" role="banner">
  <div class="site-navbar-top">

    <div class="container">

      <div class="row align-items-center ">

        {{#if user}}


        <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
          <form action="" class="site-block-top">
            <a href="/"><span class=" icon-arrow-left"></span></a>

          </form>
        </div>


        {{/if}}

        <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
          <div class="site-logo">
            <a href="#" class="js-logo-clone">Shoppers</a>
          </div>
        </div>


        <div class="col-6 col-md-4 order-3 order-md-3 text-right">
          <div class="site-top-icons">
            <ul>
              {{#if userEn}}
              <li><a href="/order-list"><span class="icon icon-file-text"></span></a></li>
              <li><a href="/user-details"><span class="icon icon-person"></span></a></li>
              <li>
                <a href="/wishlist">
                  <span class="icon icon-heart-o"></span>
                  <span id="wish-count" class="qty badge badge-pill  badge-success ">{{wishCount}}</span>
                </a>
              </li>

              <li style="margin-right:10px">
                <a href="/cart" class="site-cart">
                  <span class="icon icon-shopping_cart"></span>
                  <span class="badge badge-pill  badge-success " id="cart-count">{{cartCount}}</span>
                </a>
              </li>
              {{/if}}




              <li>
                <div class="dropdown">
                  <button class="btn btn-secondary dropdown-toggle" style="margin-bottom: 10px;" type="button"
                    id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                    {{#if userEn}}
                    {{userEn.Name}}
                    {{else}}
                    Login
                    {{/if}}
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{#if userEn}}

                    <a class="dropdown-item" href="/logout">Logout</a>
                    {{else}}

                    <a class="dropdown-item" href="/login">Login</a>

                    {{/if}}
                  </div>
                </div>
              </li>



</header>

<style>
  body {
    width: 100%;
  }
</style>