<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 mt-4">
            <div class="wrap">
                <div class="login-wrap  p-md-2">
                    <div class="d-flex">
                        <div class="w-100">
                            <h3 class="mb-4">OTP</h3>
                        </div>



                    </div>
                    <form action="/login/otp" method="POST" id="form" class="signin-form">
                        {{#if otpErr}}
                        <p class="error text-center text-danger">{{otpErr}}</p>
                        {{/if}}
                        <div class="form-group ml-4">

                            <label class=" " style="color: #01d28e ;" for="otp">Enter otp number</label>
                            <input type="text" class="form-control " style="width:95%;" id="otp" name="Otp">
                            <span id="errorOtp" style="color:red;"></span>

                        </div>

                        <div class="form-group ml-4">
                            <button type="submit" style="width:95%;"
                                class="form-control btn btn-primary rounded submit px-3">Login</button>
                        </div>

                    </form>
                    <p class="text-center"><a href="/login">Back to login ?</a></p>

                </div>
            </div>
        </div>
    </div>
</div>




<script>

    const otp = document.getElementById("otp");
    const form = document.getElementById("form");

    const error1 = document.getElementById("errorOtp");

    form.addEventListener('submit', (e) => {
        let message1 = []

        if (otp.value === '' || otp.value === null) {
            message1.push('Please Enter the OTP')
        }
        else if (otp.value.length < 6 || otp.value.length > 6) {
            message1.push('Please Enter Valid OTP')

        }
        else if (isNaN(otp.value)) {
            message1.push('Please Enter Valid OTP')
        }

        if (message1.length > 0) {
            e.preventDefault();
            error1.innerText = message1.join(' , ')

        }

    })

</script>