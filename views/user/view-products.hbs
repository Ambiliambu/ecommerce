<script>
  function addToWish(proId) {
    $.ajax({
      url: '/add-to-wish/' + proId,
      method: 'get',
      success: (response) => {
        if (response) {
          $("#addwishbox" + proId).hide();
          $("#wishbox" + proId).show();
          let count = $('#wish-count').html()
          count = parseInt(count) + 1
          $("#wish-count").html(count)
        }
      }
    })
  }




  function removeWishh(proId) {
    $.ajax({
      url: '/remove-wishh/' + proId,
      method: 'get',
      success: (response) => {
        if (response) {
          $("#addwishbox" + proId).show();
          $("#wishbox" + proId).hide();
        }
      }
    })
  }




</script>